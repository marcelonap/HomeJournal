<%= form_with(model: list_item) do |form| %>
  <% if list_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list_item.errors.count, "error") %> prohibited this list_item from being saved:</h2>

      <ul>
        <% list_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :qty, style: "display: block" %>
    <%= form.number_field :qty %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.checkbox :status %>
  </div>

  <div>
    <%= form.label :store, style: "display: block" %>
    <%= form.text_field :store %>
  </div>
  <%= turbo_frame_tag "turbo_frame" do %>
  <div>
    <%= form.submit %>
  </div>
  <%end %>
<% end %>
